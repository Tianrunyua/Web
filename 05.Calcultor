.button {
    margin-left: -10px;
    /* border: 2px solid red; */
}

.button ul li{
    margin: 3px 8px 3px 8px;
    list-style: none;
    float: left;
    text-align: center;
    border: 1.5px solid black;
    width: 80px;
    height: 50px;
    line-height: 50px;
}

.button ul li:active{
    background-color: white;
}

.button ul li:hover {
    opacity:0.8;
    cursor:pointer;
}

.num {
    background: #98FB98;
}

.alg {
    background: #FFFFE0;
}

.equal {
    background: #DEB887;
}


