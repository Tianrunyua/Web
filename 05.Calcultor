}

#title {
    text-align: center;
    color: green;
    font-weight: normal;
    font-size: 30px;
    font-family: sans-serif;
    letter-spacing: 1px;
}

.main {
    margin: 30px;
    border: 3px solid black;
    width: 460px;
    height: 380px;
}

.show {
    /* border: 2px solid blue; */
    width: 400px;
    margin: 10px; 
}

.show .input {
    margin: 10px 15px 5px 15px;
    width: 400px;
    height: 30px;
    font-size: 25px;
    font-family: sans-serif;
    color: #666666;
    text-align: right;
